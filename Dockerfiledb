# QUAL IMAGEM SERA USADA COMO BASE PARA A CRIACAO DA IMAGEM
FROM mariadb:10.6

# INFORMACAO DO MANTENEDOR DA IMAGEM
LABEL maintainer="Vinicius Puca Ribeiro viniciuspuca@gmail.com"

# DECLARACAO DE VARIAVEIS DE AMBIENTE
ENV MYSQL_ROOT_PASSWORD=12345678
ENV MYSQL_DATABASE=backup
ENV MYSQL_USER=express
ENV MYSQL_PASSWORD=AllSafe0!

# EXPOR A PORTA DE CONEXAO
EXPOSE 3306

# COPIAR ARQUIVOS E JA FAZER A RESTAURACAO DO BACKUP
COPY ./db/backup.sql /docker-entrypoint-initdb.d/

# MUDAR DE DIRETORIO
WORKDIR /docker-entrypoint-initdb.d/

# INICIAR SERVICO DO MARIADB
CMD ["mysqld"]
